<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/cardm"
    android:orientation="horizontal"
    android:weightSum="40">

    <ImageView
        android:id="@+id/escudol"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/catalunya"
        android:transitionName="escudo1" />

    <TextView
        android:id="@+id/local"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11.5"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:text="New Text" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/periodo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center_horizontal"
            android:lines="1"
            android:text="New Text"
            android:textColor="@color/primary_dark"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="New Text"
            android:textSize="18sp"
            android:transitionName="resultado" />
    </LinearLayout>

    <TextView
        android:id="@+id/visitante"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11.5"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:text="New Text" />

    <ImageView
        android:id="@+id/escudov"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="8dp"
        android:src="@drawable/catalunya"
        android:transitionName="escudo2" />
</LinearLayout>